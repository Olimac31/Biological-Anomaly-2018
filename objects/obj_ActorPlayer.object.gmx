    //Saltando
    if(!bolGround)
    {
        if !(intColLeft || intColRight)
        sprite_index = spr_player_jumpr;
        else
        sprite_index = spr_player_slide;
    }
    else
    {
        if(intVX = 0)
        sprite_index = spr_player_r;
        else if(intVX &lt; -0.5 || intVX &gt; 0.5)
        sprite_index = spr_player_walkr;
    }
}
//-------------------------------------
//Mode 3:-----------------------------
if (NPCflip == 1 and actorMode == 3)
{
    if obj_Player.x &gt; x
    {
    image_xscale = 1
    }
    else
    {
    image_xscale = -1
    }
}
